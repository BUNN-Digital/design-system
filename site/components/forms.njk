<h2 class="section-heading">Grid Form</h2>

<form class="flex flex-col p-8 mx-auto mt-4 mb-12 border border-gray-100 rounded shadow-lg">
	<!-- First and Last name -->
	<div class="flex w-full">
		<div class="flex flex-col w-1/2 mb-2 mr-2">
			<label class="w-full m-1 text-base font-sans-demi">First name</label>
			<input type="text" name="first-name" placeholder="First name" v-model="formData.firstName" class="p-3 my-1 border border-gray-100 rounded placeholder:text-gray-600">
		</div>
		<div class="flex flex-col w-1/2 mb-2 ml-2">
			<label class="w-full m-1 text-base font-sans-demi">Last name</label>
			<input type="text" name="last-name" placeholder="Last Name" v-model="formData.lastName" class="p-3 my-1 border border-gray-100 rounded placeholder:text-gray-600">
		</div>
	</div>
	<!-- Email address & phone number -->
	<div class="flex w-full">
		<div class="flex flex-col w-1/2 mb-2 mr-2">
			<label class="w-full m-1 text-base font-sans-demi">E-mail address</label>
			<input type="text" name="first-name" placeholder="email@domain.com" v-model="formData.email" class="p-3 my-1 border border-gray-100 rounded placeholder:text-gray-600">
		</div>
		<div class="flex flex-col w-1/2 mb-2 ml-2">
			<label class="w-full m-1 text-base font-sans-demi">Phone number</label>
			<input type="text" name="last-name" placeholder="(555) 555-5555" v-model="formData.phoneNumber" class="p-3 my-1 border border-gray-100 rounded placeholder:text-gray-600">
		</div>
	</div>
	<!-- Mailing address lines -->
	<div class="flex flex-col w-full">
		<label class="flex m-1 text-base font-sans-demi">Mailing address</label>
		<div class="flex mb-3">
			<input type="text" name="address-line-1" placeholder="Address line 1" v-model="formData.addressBlock.addressLine1" class="w-full p-3 my-1 border border-gray-100 rounded placeholder:text-gray-600">
		</div>
	</div>
	<div class="flex flex-col w-full">
		<div class="flex mb-2">
			<input type="text" name="address-line-2" placeholder="Address line 2" v-model="formData.addressBlock.addressLine2" class="w-full p-3 my-1 border border-gray-100 rounded placeholder:text-gray-600">
		</div>
	</div>
	<!-- City, State, Zip inline -->
	<div class="flex w-full">
		<div class="flex flex-col w-1/3 mr-2">
			<label class="w-full m-1 text-base font-sans-demi">City</label>
			<div class="flex mb-2">
				<input type="text" name="city" placeholder="City" v-model="formData.addressBlock.city"
						class="w-full p-3 my-1 border border-gray-100 rounded placeholder:text-gray-600">
			</div>
		</div>
		<div class="flex flex-col w-1/3 mx-2">
			<label class="w-full m-1 text-base font-sans-demi">State</label>
			<div class="flex mb-2">
				<input type="text" name="State" placeholder="State" v-model="formData.addressBlock.state"
						class="w-full p-3 my-1 border border-gray-100 rounded placeholder:text-gray-600">
			</div>
		</div>
		<div class="flex flex-col w-1/3 ml-2">
			<label class="w-full m-1 text-base font-sans-demi">Zip</label>
			<div class="flex mb-2">
				<input type="text" name="zip" placeholder="Zip" v-model="formData.addressBlock.zip"
						class="w-full p-3 my-1 border border-gray-100 rounded placeholder:text-gray-600">
			</div>
		</div>
	</div>

	<!-- Password -->
	<div class="flex w-full">
		<div class="flex flex-col w-full mb-2 ">
			<label for="password" class="w-full m-1 text-base font-sans-demi">Password</label>
			<input id="password" type="password" name="password" placeholder="Password" class="w-full p-3 my-1 border border-gray-100 rounded js-password-input placeholder:text-gray-600"/>
			<span class="underline cursor-pointer js-toggle-password font-sans-regular text-sm-1 hover:no-underline">show</span>
		</div>
	</div>

	<!-- Terms and conditions confirmation -->
	<div class="flex">
		<div class="mt-2 mb-4">
			<label class="cursor-pointer">
				<input type="checkbox" tabindex="0" class="mr-2" v-model="formData.agreeTerms"> I agree to
				the Terms and Conditions
			</label>
		</div>
	</div>
	<!-- Button row -->
	<div class="flex mt-6">
		<a class="mr-4 btn btn--primary"
			@click="sendFormData()">Submit</a>
		<a class="btn" @click="clearData()">Cancel</a>
	</div>
</form>

