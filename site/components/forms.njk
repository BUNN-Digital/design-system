<h2 class="section-heading">Grid Form</h2>

<form class="flex flex-col mx-auto mt-4 mb-12 p-8 border border-gray-100 rounded shadow-lg">
    <!-- First and Last name -->
    <div class="flex w-full">
        <div class="flex w-1/2 mr-2 mb-2 flex-col">
            <label class="w-full m-1 font-sans-demi text-base">First name</label>
            <input type="text" name="first-name" placeholder="First name" v-model="formData.firstName" class="my-1 p-3 border border-gray-100 rounded">
        </div>
        <div class="flex w-1/2 ml-2 mb-2 flex-col">
            <label class="w-full m-1 font-sans-demi text-base">Last name</label>
            <input type="text" name="last-name" placeholder="Last Name" v-model="formData.lastName" class="my-1 p-3 border border-gray-100 rounded">
        </div>
    </div>
    <!-- Email address & phone number -->
    <div class="flex w-full">
        <div class="flex w-1/2 mr-2 mb-2 flex-col">
            <label class="w-full m-1 font-sans-demi text-base">E-mail address</label>
            <input type="text" name="first-name" placeholder="email@domain.com" v-model="formData.email" class="my-1 p-3 border border-gray-100 rounded">
        </div>
        <div class="flex w-1/2 ml-2 mb-2 flex-col">
            <label class="w-full m-1 font-sans-demi text-base">Phone number</label>
            <input type="text" name="last-name" placeholder="(555) 555-5555" v-model="formData.phoneNumber" class="my-1 p-3 border border-gray-100 rounded">
        </div>
    </div>
    <!-- Mailing address lines -->
    <div class="flex flex-col w-full">
        <label class="flex m-1 font-sans-demi text-base">Mailing address</label>
        <div class="flex mb-3">
            <input type="text" name="address-line-1" placeholder="Address line 1" v-model="formData.addressBlock.addressLine1" class="my-1 p-3 w-full border border-gray-100 rounded">
        </div>
    </div>
    <div class="flex flex-col w-full">
        <div class="flex mb-2">
            <input type="text" name="address-line-2" placeholder="Address line 2" v-model="formData.addressBlock.addressLine2" class="my-1 p-3 w-full border border-gray-100 rounded">
        </div>
    </div>
    <!-- City, State, Zip inline -->
    <div class="flex w-full">
        <div class="flex flex-col w-1/3 mr-2">
            <label class="w-full m-1 font-sans-demi text-base">City</label>
            <div class="flex mb-2">
                <input type="text" name="city" placeholder="City" v-model="formData.addressBlock.city"
                        class="my-1 p-3 w-full border border-gray-100 rounded">
            </div>
        </div>
        <div class="flex flex-col w-1/3 mx-2">
            <label class="w-full m-1 font-sans-demi text-base">State</label>
            <div class="flex mb-2">
                <input type="text" name="State" placeholder="State" v-model="formData.addressBlock.state"
                        class="my-1 p-3 w-full border border-gray-100 rounded">
            </div>
        </div>
        <div class="flex flex-col w-1/3 ml-2">
            <label class="w-full m-1 font-sans-demi text-base">Zip</label>
            <div class="flex mb-2">
                <input type="text" name="zip" placeholder="Zip" v-model="formData.addressBlock.zip"
                        class="my-1 p-3 w-full border border-gray-100 rounded">
            </div>
        </div>
    </div>
    <!-- Terms and conditions confirmation -->
    <div class="flex">
        <div class="mt-2 mb-4">
            <label class="cursor-pointer">
                <input type="checkbox" tabindex="0" class="mr-2" v-model="formData.agreeTerms"> I agree to
                the Terms and Conditions
            </label>
        </div>
    </div>
    <!-- Button row -->
    <div class="flex mt-6">
        <a class="btn btn--primary mr-4"
            @click="sendFormData()">Submit</a>
        <a class="btn" @click="clearData()">Cancel</a>
    </div>
</form>


