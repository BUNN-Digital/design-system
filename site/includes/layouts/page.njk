---
layout: default
---

{% if section == 'Brand' %}
    {% set collection = collections.brand %}
{% elif section == 'Components' %}
    {% set collection = collections.componentsSorted %}
{% endif %}

<div class="flex items-stretch w-full mx-auto bg-white pb-16 lg:pb-32">
    <div class="hidden justify-around md:flex md:block md:w-1/4 lg:w-1/5 px-8 relative">
        <div>
            <div class="text-sm-2 font-sans-demi mb-2 uppercase tracking-wider text-gray-500 lg:pt-6">{{ section }}</div>
            {% for entry in collection  %}
                <a href="{{ entry.url }}" class="block py-1{% if page.url == entry.url %} text-brand-primary font-sans-demi{% else %} text-gray-700{% endif %}">{{ entry.data.title }}</a>
            {% endfor %}
        </div>
    </div>

    <div class="w-full md:w-3/4 lg:w-4/5">
        <div class="max-w-4xl w-full m-auto px-8 lg:py-8">
            <h1 class="heading-alpha">{{ title }}</h1>

            {{ content | safe }}
        </div>        
    </div>
</div>
